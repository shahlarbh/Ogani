    var categories = viewModel.Categories;
    var filters = viewModel.Filters;
    var products = viewModel.Products;
    var banners = viewModel.Banners;
    var blogs = viewModel.Blogs;
    var topBanners = viewModel.HomeTopBanners;
}

<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All departments</span>
                    </div>
                    <ul>
                        @foreach(var department in departments)
                        {
                            <li><a href="#">@department.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
                @foreach(var topBanner in topBanners)
                {
                    <div class="hero__item set-bg" data-setbg="/img/hero/@topBanner.ImageUrl">
                        <div class="hero__text">
                            <span>@topBanner.Title</span>
                            <h2>@Html.Raw(topBanner.Description)</h2>
                            <p>@topBanner.Info</p>
                            <a href="#" class="primary-btn">SHOP NOW</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach(var category in categories)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/@category.ImageUrl">
                            <h5><a href="#">@category.Name</a></h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        @foreach(var filter in filters)
                        {
                            <li data-filter=".@filter.DataFilter">@filter.Name</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach(var product in products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix @product.Filter.DataFilter">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/img/featured/@product.ImageUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@product.Name</a></h6>
                            <h5>$@product.Price</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            @foreach(var banner in banners)
            {
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="~/img/banner/@banner.ImageUrl" alt="">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Banner End -->
